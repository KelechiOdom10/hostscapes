datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime   @default(now())
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  listings  Listing[]
  password  String
  roles     Json
  trips     Trip[]
  updatedAt DateTime   @updatedAt
  username  String     @unique
  wishlists Wishlist[]

  @@map("users")
}

model Listing {
  createdAt      DateTime   @default(now())
  description    String
  id             String     @id @default(cuid())
  locationData   Json
  locationType   String
  mapData        Json
  photos         Json
  placeAmeneites Json
  placeSpace     Json
  placetype      String
  price          Int
  title          String
  trips          Trip[]
  updatedAt      DateTime   @updatedAt
  user           User       @relation(fields: [userId], references: [id])
  userId         String
  wishlists      Wishlist[]

  @@unique([userId, title])
  @@map("listings")
}

model Wishlist {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@unique([userId, listingId])
  @@map("wishlists")
}

model Trip {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  tripData  Json
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@unique([userId, listingId])
  @@map("trips")
}
