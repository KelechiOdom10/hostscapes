datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime   @default(now())
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  listings  Listing[]
  password  String
  roles     Json
  trips     Trip[]
  updatedAt DateTime   @updatedAt
  username  String     @unique
  wishlists Wishlist[]

  @@map("users")
}

model Listing {
  address          String
  amenities        Json
  country          String
  createdAt        DateTime                @default(now())
  description      String
  id               String                  @id @default(cuid())
  latitude         Decimal
  listingType      EnumListingListingType? @default(Apartment)
  longitude        Decimal
  maxGuests        Int
  numBaths         Int
  numBedrooms      Int
  numberOfBeds     String?
  photos           Json
  price            Int
  shortDescription String
  slug             String                  @unique
  title            String
  trips            Trip[]
  updatedAt        DateTime                @updatedAt
  user             User                    @relation(fields: [hostId], references: [id])
  hostId           String
  wishlists        Wishlist[]

  @@unique([userId, title])
  @@map("listings")
}

model Wishlist {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@unique([userId, listingId])
  @@map("wishlists")
}

model Trip {
  createdAt DateTime @default(now())
  endDate   DateTime
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  startDate DateTime
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@unique([userId, listingId])
  @@map("trips")
}

enum EnumListingListingType {
  Apartment
  House
}
