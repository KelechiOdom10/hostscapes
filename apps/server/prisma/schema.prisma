datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime   @default(now())
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  listings  Listing[]
  password  String
  roles     Json
  trips     Trip[]
  updatedAt DateTime   @updatedAt
  username  String     @unique
  wishlists Wishlist[]
}

model Listing {
  address          String
  amenities        Json
  country          String
  createdAt        DateTime                @default(now())
  description      String
  host             User                    @relation(fields: [hostId], references: [id])
  hostId           String
  id               String                  @id @default(cuid())
  latitude         Decimal
  listingType      EnumListingListingType? @default(EnumListingType.Apartment)
  location         String
  longitude        Decimal
  maxGuests        Int
  numBaths         Int
  numBeds          Int
  photos           Json
  price            Int
  shortDescription String
  slug             String                  @unique
  title            String
  trips            Trip[]
  updatedAt        DateTime                @updatedAt
  wishlists        Wishlist[]
}

model Wishlist {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Trip {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  tripData  Json
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

enum EnumListingListingType {
  Apartment
  House
}
